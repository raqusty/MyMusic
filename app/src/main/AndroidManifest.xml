<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="music.hayasi.android.com.mymusic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name="music.hayasi.android.com.mymusic.MyApplication"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".module.main.FirstActivity"
            android:label="@string/app_name">
            <intent-filter tools:ignore="GoogleAppIndexingWarning">
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".module.mvvm.MvvmListActivity">
            <intent-filter>
                <action android:name="MVVMList" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".module.main.MyImage"
            android:theme="@style/Theme.AppCompat.Dialog">
            <intent-filter>
                <action android:name="MyImage" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".module.mvvm.MvvmActivity">
            <intent-filter>
                <action android:name="MVVM" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".module.Messenger.MessageActivity">
            <intent-filter>
                <action android:name="MessageActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".module.AnimationView.DragMoveActivity">
            <intent-filter>
                <action android:name="DragMove" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".module.AnimationView.AnimActivity">
            <intent-filter>
                <action android:name="Anim" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".module.CustomView.CustomViewActivity">
            <intent-filter>
                <action android:name="CustomViewActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".module.MaterialDesign.DesignActivity">
            <intent-filter>
                <action android:name="DesignActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".module.NetWork.NetActivity">
            <intent-filter>
                <action android:name="NetActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".module.model.ModelActivity">
            <intent-filter>
                <action android:name="ModelActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity android:name=".module.MaterialDesign.DesignScrollActivity">
            <intent-filter>
                <action android:name="DesignScrollActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".module.View.PhotoViewActivity">
            <intent-filter>
                <action android:name="PhotoViewActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".module.Footer.FooterActivity">
            <intent-filter>
                <action android:name="FooterActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>







        <service android:name=".module.Messenger.MessagerService" />
        <service android:name=".module.Aidl.MyService">
            <intent-filter>
                <action android:name="cc.abto.server" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        /* -------------------------------------------------- */

    </application>

</manifest>